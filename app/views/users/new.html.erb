</html>
<%= form_for @user, :html => {:class => "form-horizontal center"} do |f| %>
<div class="form-group">
   <%= f.label :username, "Username:", class: "col-md-4 control-label" %>
<div class="col-md-8">
     <%= f.text_field :username, class: "form-control" %>
</div>
</div>
 <div class="form-group">
         <%= f.label :password, "Password:", class: "col-md-4 control-label" %>
         <div class="col-md-8">
           <%= f.password_field :password, class: "form-control" %>
        </div>
 </div>
 <div class="form-group">
         <%= f.label :email, "email:", class: "col-md-4 control-label" %>
         <div class="col-md-8">
           <%= f.text_field :email, class: "form-control" %>
           <%= f.submit "Sign Up" %>
           <%end%>
        </div>
 </div>






    <% if flash[:errors]%>
    <% flash[:errors].each do |error|%>
    <%= error %>
    <%end%>
    <%end%>
