<div id="homepage-background">





	<div class="content">
		<div id="homepage-content">
			<div id="homepage-container">

			<div class="title">
				<img src="/assets/instrgrm.png" id="homepage-logo">
			</div>



			<div class="homepage-text">
                <%= form_for static_pages_login_path, method: :get do |f| %>
                <div class="form-group">
                   <%= f.label :username, "Username:", class: "col-md-4 control-label" %>
                <div class="col-md-8">
                     <%= f.text_field :username, class: "form-control" %>
                </div>
                </div>
                 <div class="form-group">
                         <%= f.label :password, "Password:", class: "col-md-4 control-label" %>
                         <div class="col-md-8">
                           <%= f.password_field :password, class: "form-control" %>
                        </div>
                 </div>
                 <div class="form-group">
                     <%= f.submit "Log in" %>
                           <%end%>
                        </div>
                 </div>



			</div>



			</div>

		</div>
		<div class="errors">
		    <% if flash[:errors]%>
		    <% flash[:errors].each do |error|%>
		    <h1><%= error %></h1>
		    <%end%>
		    <%end%>

		</div>



	</div>

</div>
