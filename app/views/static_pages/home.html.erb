<div id="homepage-background">

	<video autoplay muted loop id="myVideo">
	  <source src="/videos/light.mp4" type="video/mp4">
	</video>

	<%# video_tag("/videos/light.mp4") %>

	<div class="content">
		<div id="homepage-content">
			<div id="homepage-container">

			<div class="title">
				<img src="/assets/instrgrm.png" id="homepage-logo">
			</div>

			<div class="homepage-text">
                <%= form_for new_login_path, :html => {:class => "form-horizontal center"} do |f| %>
                <div class="form-group">
                   <%= f.label :username, "Username:", class: "col-md-4 control-label" %>
                <div class="col-md-8">
                     <%= f.text_field :username, class: "form-control" %>
                </div>
                </div>
                 <div class="form-group">
                         <%= f.label :password, "Password:", class: "col-md-4 control-label" %>
                         <div class="col-md-8">
                           <%= f.password_field :password, class: "form-control" %>
                        </div>
                 </div>
                 <div class="form-group">
                     <%= f.submit "Log in" %>
                           <%end%>
                        </div>
                 </div>



			</div>



			</div>

		</div>


	</div>

</div>
